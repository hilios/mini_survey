- content_for(:title) { "Respostas: #{@survey.title} - %s" }
= link_to 'Voltar', @survey, :class => :back
%h1 
  Respostas
= render 'surveys/actions', :survey => @survey
.survey
  %h3
    = @survey.title
  = flash_messages
  %ol
    - @survey.questions.each do |question|
      %li
        %strong= question.title
        %ul
          - question.choices.each do |choice|
            %li
              = radio_button_tag '', '', current_user.answered_choice?(choice), :disabled => true
              = choice.title